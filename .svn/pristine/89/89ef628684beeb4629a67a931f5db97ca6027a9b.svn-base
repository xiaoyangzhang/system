package com.yhyt.health.controller;

import com.yhyt.health.model.Order;
import com.yhyt.health.model.OrderDepartmentDetail;
import com.yhyt.health.result.AppResult;
import com.yhyt.health.service.OrderService;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.web.bind.annotation.PatchMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RestController;

import java.util.Date;

@RestController
public class OrderController {

    private static Logger logger = LoggerFactory.getLogger(OrderController.class);

    @Autowired
    private OrderService orderService;
    @Value("${order.timeout}")
    private Long timeout;

    @PatchMapping("/order/cancel/{id}")
    public AppResult cancelOrder(@PathVariable("id")Long id) {
        AppResult appResult = new AppResult();
        Order order = orderService.getOrderById(id);
        if (order!=null && new Date().getTime()-order.getCreateTime().getTime()>timeout){
            order.setPayTime(null);
            order.setState((byte)9);
            try {
                appResult = orderService.updateOrderState(order);
            } catch (Exception e) {
                logger.error("订单取消失败，error:{}",e);
            }

        }
        return appResult;
    }

    @PostMapping("/orderDepartmentDetail")
    public AppResult addOrderDepartmentDetail(OrderDepartmentDetail orderDepartmentDetail) {
        return orderService.addOrderDepartmentDetail(orderDepartmentDetail);
    }

}
